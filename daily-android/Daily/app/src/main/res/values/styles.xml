<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/color_white_with_alpha</item>
        <item name="actionMenuTextColor">@color/color_white_with_alpha</item>

        <item name="android:alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>

    </style>

    <style name="AppTheme.AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">@color/color_dialog_base</item>

    </style>

    <style name="TextAppearance.AppTheme.Counter" parent="TextAppearance.AppCompat">

        <item name="android:textColor">@color/color_white_with_alpha</item>

    </style>

    <style name="TextAppearance.AppTheme.Base" parent="TextAppearance.AppCompat">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="TextAppearance.AppTheme.Large" parent="TextAppearance.AppTheme.Base">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="TextAppearance.AppTheme.Medium" parent="TextAppearance.AppTheme.Base">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="TextAppearance.AppTheme.Small" parent="TextAppearance.AppTheme.Base">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

</resources>
